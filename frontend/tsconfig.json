{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": ".",
    "paths": {
      "ladle/*": [".ladle/*"],
      "@/*": ["src/*"],
      "@kiesraad/api-mocks": ["src/testing/api-mocks/index.ts"],
      "@kiesraad/test": ["src/testing/index.ts"],
      "@kiesraad/util": ["src/lib/util/index.ts"],
      "@kiesraad/i18n": ["src/lib/i18n/index.ts"]
    },
    "types": ["node", "vite/client", "vitest/importMeta"]
  },
  "include": [
    ".ladle/**/*",
    "src/**/*",
    "scripts/**/*",
    "playwright.e2e.config.ts",
    "playwright.ladle.config.ts",
    "vite.config.ts",
    "vite-prod.config.ts",
    "vitest.config.ts",
    "e2e-tests/**/*"
  ]
}
