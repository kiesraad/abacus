{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": ".",
    "paths": {
      "ladle/*": [".ladle/*"],
      "app/*": ["app/*"],
      "@kiesraad/api": ["lib/api/index.ts"],
      "@kiesraad/api-mocks": ["lib/api-mocks/index.ts"],
      "@kiesraad/ui": ["lib/ui/index.ts"],
      "@kiesraad/icon": ["lib/icon/index.ts"],
      "@kiesraad/util": ["lib/util/index.ts"]
    },
    "types": ["node", "vite/client", "vitest/importMeta"]
  },
  "include": [
    ".ladle/**/*",
    "app/**/*",
    "lib/**/*",
    "scripts/**/*",
    "playwright.app.config.ts",
    "playwright.lib-ui.config.ts",
    "vite.config.ts"
  ]
}
